<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtX"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:hint="Наклон по оси X"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtZ"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:hint="Наклон по оси Z"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtX" />

    <ImageView
        android:id="@+id/imXBack"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtZ"/>

    <ImageView
        android:id="@+id/imZBack"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imXBack"/>

    <ImageView
        android:id="@+id/imX"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/imXBack"
        app:layout_constraintEnd_toEndOf="@+id/imXBack"
        app:layout_constraintStart_toStartOf="@+id/imXBack"
        app:layout_constraintTop_toTopOf="@+id/imXBack"/>

    <ImageView
        android:id="@+id/imZ"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="@+id/imZBack"
        app:layout_constraintEnd_toEndOf="@+id/imZBack"
        app:layout_constraintStart_toStartOf="@+id/imZBack"
        app:layout_constraintTop_toTopOf="@+id/imZBack"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="Второй экран"
        android:textSize="19sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>